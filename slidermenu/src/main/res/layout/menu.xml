<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dip"
    android:scrollbars="none"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg"
   >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="180dip"
    android:layout_height="wrap_content">
    <TextView
        style="@style/myStyle"
android:id="@+id/news"
        android:drawableLeft="@drawable/tab_news"
        android:text="新闻" />

    <TextView
        style="@style/myStyle"
android:id="@+id/read"
        android:drawableLeft="@drawable/tab_read"
        android:text="订阅" />

    <TextView
        style="@style/myStyle"
android:id="@+id/local"
        android:drawableLeft="@drawable/tab_local"
        android:text="本地" />

    <TextView
        style="@style/myStyle"
android:id="@+id/ties"
        android:drawableLeft="@drawable/tab_ties"
        android:text="跟帖" />

    <TextView
        style="@style/myStyle"
android:id="@+id/pics"
        android:drawableLeft="@drawable/tab_pics"
        android:text="图片" />

    <TextView
        style="@style/myStyle"
android:id="@+id/ugc"
        android:drawableLeft="@drawable/tab_ugc"
        android:text="话题" />

    <TextView
        style="@style/myStyle"
android:id="@+id/vote"
        android:drawableLeft="@drawable/tab_vote"
        android:text="投票" />

    <TextView
        style="@style/myStyle"
android:id="@+id/focus"
        android:drawableLeft="@drawable/tab_focus"
        android:text="聚合" />
</LinearLayout>

</ScrollView>